{
  "name": "textile-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "install:server": "cd textile-backend && npm install",
    "install:client": "cd textile-flashcards && npm install",
    "serve:server": "cd textile-backend && npm run dev",
    "serve:client": "cd textile-flashcards && npm run serve",
    "postinstall": "run-p install:*",
    "build": "cd textile-backend && npm run build",
    "dev": "run-p serve:*"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "postinstall": "^0.7.0"
  }
}
